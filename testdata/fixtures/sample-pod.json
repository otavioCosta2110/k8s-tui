{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "sample-pod",
    "namespace": "default",
    "labels": {
      "app": "test"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "test-container",
        "image": "nginx:latest",
        "ports": [
          {
            "containerPort": 80
          }
        ]
      }
    ]
  },
  "status": {
    "phase": "Running",
    "conditions": [
      {
        "type": "Ready",
        "status": "True"
      }
    ]
  }
}